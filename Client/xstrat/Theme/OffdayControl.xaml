<UserControl x:Class="xstrat.Theme.OffdayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xstrat.Theme" xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="700">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Name="DeleteButton">
                <Button.Content>
                    <MaterialDesign:PackIcon Height="25" Width="25" Kind="Delete"></MaterialDesign:PackIcon>
                </Button.Content>
            </Button>
            <TextBlock Width="200" Foreground="White" Text="Title" VerticalAlignment="Center" Name="TitleText" FontSize="16"/>
            <Label Foreground="White" VerticalAlignment="Center" FontSize="15" Name="CreationDate">01.01.2022</Label>
            <local:DataSelector type="3" Width="130" x:Name="TypeSelector" Margin="5,0,0,0"></local:DataSelector>
        </StackPanel>
    </Grid>
</UserControl>
