<UserControl x:Class="xstrat.Ui.Teammate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xstrat.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Viewbox>
            <TextBlock Name="UserName" Foreground="White" FontWeight="Normal" VerticalAlignment="Center" Margin="2"></TextBlock>
        </Viewbox>
        <Rectangle Fill="Cyan" Height="25" Width="25" Grid.Column="1" Stroke="#181818" Name="UserColorRectangle"></Rectangle>
        <Label Foreground="#808080" Name="UserID" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">123</Label>
    </Grid>
</UserControl>
